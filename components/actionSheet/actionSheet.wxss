/* components/actionSheet/actionSheet.wxss */
.bgView {
  background-color: rgba(0, 0, 0, 0.55);
  position: fixed;
  z-index: 110;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
}

.actionSheet {
  background-color: white;
  width: 100%;
  height: 468rpx;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
}

.titleView {
  height: 115rpx;
  margin-left: 30rpx;
  width: 690rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 690rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #3A3A3A;
  font-size: 34rpx;
  font-weight: bold;
  border-bottom: 0.5rpx solid #F1F1F1;
}

.listScrollView {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.optionView {
  margin-left: 30rpx;
  width: 690rpx;
  height: 100rpx;
  border-bottom: 0.5rpx solid #F1F1F1;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #808080;
  font-size: 32rpx;
}