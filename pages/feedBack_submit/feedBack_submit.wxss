/* pages/feedBack_submit/feedBack_submit.wxss */
.navigationBar {
  position: fixed;
  width:750rpx;
  height:176rpx;
  background:linear-gradient(90deg,rgba(20,203,162,1) 0%,rgba(111,238,209,1) 100%);
  opacity:1;
  display: flex;
  z-index: 100;
}

.navigation_content {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.navigation_backView {
  width: 100rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.navigation_backImage {
  width: 27.11rpx;
  height: 27.11rpx;
  margin-left: 32rpx;
}

.navgation_title {
  color: white;
  font-size: 34rpx;
  font-weight: bold;
}

.contentView {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.contentBgView {
  min-height: 341rpx;
  display: flex;
  flex-direction: row;
}

.content_image {
  margin-left: 29rpx;
  margin-top: 42rpx;
  width: 22.91rpx;
  height: 26.07rpx;
}

.content_textarea {
  font-size: 30rpx;
  color: black;
  margin-top: 36rpx;
  margin-left: 15rpx;
  width: 653rpx;
  display: flex;
  flex-wrap: wrap;
}

.content_textarea_placehoulder {
  color: #b4b4b4;
  font-size: 30rpx;
}

.addImageTitle {
  height: 80rpx;
  display: flex;
  /* width: 100%; */
  align-items: center;
  justify-content: flex-start;
  padding-left: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #272727;
}

.imageCollectionView {
  margin-left: 30rpx;
  width: 690rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.imageCell {
  width: 210rpx;
  height: 215rpx;
  position: relative;
}

.image {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  bottom: 0;
  left: 0;
  background-color: black;
}

.image_deleteView {
  position: absolute;
  z-index: 2;
  width: 60rpx;
  height: 60rpx;
  top: 0;
  right: 0;
}

.image_delete {
  position: absolute;
  z-index: 3;
  width: 46rpx;
  height: 46rpx;
  top: 0;
  right: 0;
}