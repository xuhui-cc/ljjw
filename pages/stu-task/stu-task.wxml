<view class="container">

  <view class="mask-layout" hidden="true"></view>
  <view class="reject-layout" hidden="true">
    <image class="reject-close" src="../../images/close.png"></image>
    <view class="reject-head">
      <view class="reject-shu"></view>
      <view class="reject-title">驳回原因</view>
    </view>
    <view class="reject-cont-lay">
      <textarea class="reject-for" placeholder="请填写您的驳回原因…" bindinput='reject_for'></textarea>
    </view>
    <view wx:if="{{isreject}}" class="reject-sub" bindtap='reject'>确定</view>
    <view wx:else="{{isreject}}" class="reject-sub1" >确定</view>
  
  </view>

  <!-- 成绩分类显示菜单栏 -->
  <view class="record-bar">
    <text class="aud {{finish == 0 ? 'active': ''}}" bindtap="finish_select" data-finish="{{0}}">待完成</text>
    <text class="aud {{finish == 1 ? 'active': ''}}" bindtap="finish_select" data-finish="{{1}}">已完成</text>
  </view>
  <!-- 成绩分类显示菜单栏 -->

  

  <!-- 待完成 -->
  <view wx:if="{{finish == 0}}">
    <view wx:for="{{task}}" wx:key="index">

      <!-- type==1 普通式 -->
      <view wx:if="{{item.type == 1}}">
        <view class="ques-layout">
          <view class="flex">
            <view class="ques-ori">来自：{{item.pubname}}老师</view>
            <view class="ques-date">{{item.pubtime}}</view>
          </view>
          <view class="heng"></view>
          <!-- 问题循环 -->
          <view>
            <view class="task1_head">{{item.subject}}</view>
            <view class="task1_title">{{item.title}}</view>
            <view class="img_layout">
              <image class='big_img' src='../../images/big.png'></image>
              <image class="task1_img" src="{{item.attach}}"></image>
            </view>
            <view class="remark-layout">
              <textarea class="remark" placeholder="点击输入文字"></textarea>
            </view>
          </view>
          <!-- 问题循环 -->
          <view class="ques-sub">提交</view>
        </view>
      </view>
      <!-- type==1 普通式 -->

      <!-- type==2 选项式 -->
      <view wx:if="{{item.type == 2}}">
        <view class="ques-layout">
          <view class="flex">
            <view class="ques-ori">来自：{{item.pubname}}老师</view>
            <view class="ques-date">{{item.pubtime}}</view>
          </view>
          <view class="heng"></view>
          <view class="task1_title">{{item.title}}</view>
          <!-- 问题循环 -->
            <view wx:for="{{item.task_detail}}" wx:key="task_detail_index" wx:for-item="task_detail">
              <view>
                <view class="ques-title">{{task_detail.child_title}}</view>
                <view class="ans-layout">
                  <view wx:for="{{task_detail.options.list}}" wx:key="list_index"  wx:for-item="list">
                    <view class="ques-cont">{{list.option}}.{{list.item}}</view>
                  </view>
                </view>
                <view class="remark-layout">
                  <textarea class="remark" placeholder="说点什么吧……"></textarea>
                </view>
              </view>
            </view>
          <!-- 问题循环 -->
          <view class="ques-sub">提交</view>
        </view>
      </view>
      <!-- type==2 选项式 -->

      <!-- type==3 字段式 -->
      <view wx:if="{{item.type == 3}}">
        <view class="ques-layout">
          <view class="flex">
            <view class="ques-ori">来自：{{item.pubname}}老师</view>
            <view class="ques-date">{{item.pubtime}}</view>
          </view>
          <view class="heng"></view>
           <!-- 问题循环 -->
            <view wx:for="{{item.task_detail}}" wx:key="task_detail_index" wx:for-item="task_detail">
              <view>
                <!-- <view class="ques-title">{{task_detail.child_title}}</view> -->
                <view wx:for="{{task_detail.fieldlist.list}}" wx:key="list_index"  wx:for-item="list">
                  <view class="ans-layout">
                    <view class="ques-cont">{{list}}</view>
                    <input class="ans_input" placeholder="请填写"></input>
                  </view>
                  <view class="ans_heng"></view>
                </view>
                <view class="remark-layout">
                  <textarea class="remark" placeholder="说点什么吧……"></textarea>
                </view>
                <view class="add">添加照片</view>
                <view class="add_img_layout">
                  <view wx:for="{{imgs}}" wx:key="index">
                    <image class="del-img" data-xb='{{index}}' bindtap='del_img' src="../../images/gdel.png"></image>
                    <image class="add_img" src="{{item}}"></image>
                  </view>
                  
                  <image wx:if="{{imgs.length < 3}}" class='add_img' src='../../images/insert_img.png' bindtap='chooseImg'></image>
                </view>
              </view>
            </view>
          <!-- 问题循环 -->
          <view class="ques-sub">提交</view>
        </view>
      </view>
      <!-- type==3 字段式 -->

      <!-- type==4 普通式 -->
      <view wx:if="{{item.type == 4}}">
        <view class="ques-layout">
          <view class="flex">
            <view class="ques-ori">来自：{{item.pubname}}老师</view>
            <view class="ques-date">{{item.pubtime}}</view>
          </view>
          <view class="heng"></view>
          <!-- 问题循环 -->
          <view>
            
          </view>
          <!-- 问题循环 -->
          <view class="ques-sub">提交</view>
        </view>
      </view>
      <!-- type==4 普通式 -->


    </view>

  
  
    
  </view>
  <!-- 待完成 -->

  <!-- 已完成 -->
  <view wx:if="{{finish == 1}}">
    <view class="ques-layout" wx:if="{{finish_task}}">
      <view class="flex">
        <view class="ques-ori">来自：徐颖很好老师</view>
        <view class="ques-date">2019.10.25  20:05</view>
      </view>
      <view class="heng"></view>
      <!-- 问题循环 -->
      <view>
        <view class="ques-title">1. 12月22日是否就餐？</view>
        <view class="ans-layout">
          <view class="ques-cont">A.校长不让在校服上别别在校服上别别在校服上别别上别别</view>
          <view class="ques-cont">A.校长不让在</view>
          <view class="ques-cont">A.校长不让在</view>
          <view class="ques-cont">A.校长不让在校服上别别校服上别别</view>
        </view>
        <view class="remark-layout">
          <view class="remark" ></view>
        </view>
      </view>
      <!-- 问题循环 -->
      
    </view>

    <view wx:if="{{finish_task == ''}}">
      <image class='img_null' src='../../images/null.png'></image>
    </view>

  
  
  
    
  </view>
  <!-- 已完成 -->























<!-- container -->
</view>