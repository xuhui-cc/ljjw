              </view>
            </view>
            
          </view>
          <!-- 问题循环 -->
          
        </view>
      </view>
      <!-- type==4 考勤确认 -->


    </view>

    <view wx:if="{{finish_task == ''}}">
      <image class='img_null' src='../../images/null.png'></image>
    </view>

  
  
  
    
  </view>
  <!-- 已完成 -->























