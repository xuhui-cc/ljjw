           <!-- 问题循环 -->
            <view wx:for="{{item.task_detail}}" wx:key="task_detail_index" wx:for-index="task_detail_index" wx:for-item="task_detail">
              <view class="type3_layout">
                <!-- <view class="ques-title">{{task_detail.child_title}}</view> -->
                <view wx:for="{{task_detail.fieldlist.list}}" wx:key="list_index"  wx:for-item="list">
                  <view class="ans-layout">
                    <view class="ques-cont">{{list}}</view>
                    <input class="ans_input" placeholder="请填写"></input>
                  </view>
                  <view class="ans_heng"></view>
                </view>
                <view class="remark-layout">
                  <textarea class="remark" placeholder="说点什么吧……"></textarea>
                </view>
                <view class="add">添加照片</view>
                <view class="add_img_layout">
                  <view wx:for="{{task_detail.fieldlist.imgs}}" wx:key="img_index">
                    <image class="del-img" data-xb='{{index}}' data-task_detail_index="{{task_detail_index}}" data-task_index="{{task_index}}" bindtap='del_img' src="../../images/gdel.png"></image>
