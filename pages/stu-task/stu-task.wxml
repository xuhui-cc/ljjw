                <view wx:if="{{task_detail.check_status == 1}}" class="stu_condition" style="color:rgba(255,152,83,1);">迟到</view>
                <view wx:if="{{task_detail.check_status == 2}}" class="stu_condition" style="color:#F86478;">旷课</view>
