<view >

  <!-- 导航栏 -->
  <view class="nabigation_bar">
    <image class='back-img' src='../../images/back_img.png' bindtap="back"></image>
    <picker mode='selector' bindchange="tea_class_picker" range-key="{{'name'}}" value="{{tea_class_index}}" range="{{tea_class}}" > 
      <view class="bar-class">{{tea_class[tea_class_index].name}}</view>
    </picker>
    <picker mode='selector' bindchange="tea_class_picker" range-key="{{'name'}}" value="{{tea_class_index}}" range="{{tea_class}}" >
      <image class="bar-img" src="../../images/wxsj.png"></image>
    </picker>
  </view>
  <!-- 导航栏结束 -->

  
  <!-- 左侧列表内容部分 -->
  <scroll-view class="content" enable-back-to-top scroll-into-view="{{toView}}" scroll-y="true" scroll-with-animation="true" bindscroll="onPageScroll"> 
    <view wx:for="{{dataarr}}" wx:for-item="group" wx:key="{{group.id}}" wx:for-index="cs" id="{{ 'inToView'+group.id}}" data-id='{{group.id}}'> 
      <view class="address_top" >{{group.groupName}}</view> 
        <view wx:for="{{group.users}}" wx:for-item="item" wx:key="{{item.brandId}}">
          <view class="flex">
            <image class="avatar" src="{{item.avatar}}"></image> 
            <view class="heng">
              <view class="address_bottom" data-id='{{item.brandId}}'>{{item.realname}}</view> 
              <image class="xsda-img" src="../../images/xsda.png"></image>
              <view class="xsda" data-xb='{{index}}' data-dxb='{{cs}}' bindtap="to_tea_xsda">学生档案</view>
              <image class="jczl-img" src="../../images/jczl.png"></image>
              <view class="xsda" data-xb='{{index}}' data-dxb='{{cs}}' bindtap="to_tea_sjcxx">基础资料</view>
            </view>
            
          </view>
        </view> 
    </view> 
  </scroll-view> 
  <!-- 右侧字母导航 -->
  <view class="orientation_region"> 
    <block wx:for="{{dataarr}}"  wx:key="{{item.id}}"> 
      <view class="orientation_city  {{isActive==item.id ? 'active':'' }}" bindtap="scrollToViewFn" data-id="{{item.id}}" >
        {{item.groupName}}
      </view> 
    </block> 
  </view>
    
</view>
