<view class="container">

  <!-- 成绩分类显示菜单栏 -->
  <view class="record-bar">
    <text class="aud {{aud == 1 ? 'active': ''}}" bindtap="aud_select" data-aud="{{0}}">总分</text>
    <text class="aud {{aud == 2 ? 'active': ''}}" bindtap="aud_select" data-aud="{{1}}">行测</text>
    <text class="aud {{aud == 3 ? 'active': ''}}" bindtap="aud_select" data-aud="{{2}}">申论</text>
  </view>
  <!-- 成绩分类显示菜单栏 -->

  <!-- 冠亚季 -->
  <view class="champ-layout">

    <view class="flex">
      <view class="champ-rank">
        <image class="second-img" src="../../images/second.png"></image>
        <image class="runner-up-ava" src="{{totalscore[1].avatar}}"></image>
        <view class="runner-up-name">{{totalscore[1].realname}}</view>
        <view class="runner-up-record">{{totalscore[1].totalscore}}</view>
      </view>

      <view class="champ-rank">
        <image class="first-img" src="../../images/first.png"></image>
        <image class="champion-ava" src="{{totalscore[0].avatar}}"></image>
        <view class="champion-name">{{totalscore[0].realname}}</view>
        <view class="champion-record">{{totalscore[0].totalscore}}</view>
      </view>

      <view class="champ-rank">
        <image class="third-img" src="../../images/third.png"></image>
        <image class="third-ava" src="../../images/avatar.png"></image>
        <view class="third-name">张帆</view>
        <view class="third-record">175</view>
      </view>
    </view>

  
    <view >
      <view class="record-detail-heng"></view>
      <view wx:if="{{aud == 2}}">

        <view class="flex">
          <view class="kemu">科目</view>
          <view class="bingo">答对题目</view>
          <view class="bingo">分值</view>
        </view>

        <view class="rec-for">
          <view class="flex">
            <view class="kemu-name">科目名称</view>
            <view class="bingo-num">25</view>
            <view class="record">22.5</view>
          </view>
        </view>

      </view>

      <view wx:if="{{aud == 1}}">

        <view class="flex">
          <view class="s-kemu">科目</view>
          <view class="s-bingo">分值</view>
        </view>

        <view class="rec-for">
          <view class="flex">
            <view class="s-kemu-name">科目</view>
            <view class="s-record">22.5</view>
          </view>
        </view>
        
      </view>

      <view wx:if="{{aud == 3}}">

      <view class="flex">
        <view class="s-kemu">科目</view>
        <view class="s-bingo">分值</view>
      </view>

      <view class="rec-for">
        <view class="flex">
          <view class="s-kemu-name">科目</view>
          <view class="s-record">22.5</view>
        </view>
      </view>
        
    </view>

    </view>

  </view>
  <!-- 冠亚季 -->


