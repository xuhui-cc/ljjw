    <view class="flex">
      <view class="rank-num">4</view>
      <image class="rank-ava" src="../../images/avatar.png"></image>
      <view class="rank-name">哈哈哈哈</view>
      <view class="rank-record">162</view>
      <image class="rank-xl" src="../../images/xsj.png"></image>
