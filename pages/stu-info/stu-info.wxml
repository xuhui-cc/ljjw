<view class="container">
  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">我的头像</view>
    <view class="tip">请选择</view>
    <image class="select" src="../../images/next.png"></image>
  </view>

  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">姓名</view>
    <input class="tip" placeholder="请填写" bindinput='input_name' ></input>
    <!-- <image class="select" src="../../images/next.png"></image> -->
  </view>

  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">电话</view>
    <input class="tip" placeholder="请填写" bindinput='input_phone' type="number"></input>
    <!-- <image class="select" src="../../images/next.png"></image> -->
  </view>

  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">性别</view>
    <picker bindchange="sex_picker" value="{{sex_index}}" range="{{sex}}">
      <view class="tip">{{sex[sex_index]}}</view>
    </picker>
    <picker bindchange="sex_picker" value="{{sex_index}}" range="{{sex}}">
      <image class="select" src="../../images/next.png"></image>
    </picker>
  </view>

  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">毕业院校</view>
    <input class="tip" placeholder="请填写" bindinput='input_school' ></input>
    <!-- <image class="select" src="../../images/next.png"></image> -->
  </view>

  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">毕业时间</view>

    <picker mode="date" value="{{graduation_time}}" start="2015-09-01" end="{{cur_date}}" bindchange="graduation_time">
      <view class="tip">{{graduation_time}}</view>
    </picker>

    <picker mode="date" value="{{graduation_time}}" start="2015-09-01" end="{{cur_date}}" bindchange="graduation_time">
      <image class="select" src="../../images/next.png"></image>
    </picker>
  </view>

  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">专业</view>
    <input class="tip" placeholder="请填写" bindinput='input_major'></input>
    <!-- <image class="select" src="../../images/next.png"></image> -->
  </view>

  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">邮箱</view>
    <input class="tip" placeholder="请填写" bindinput='input_email'></input>
    <!-- <image class="select" src="../../images/next.png"></image> -->
  </view>

  <view class="flex">
    <view class="shu"></view>
    <view class="info-tltle">班级</view>
    <picker bindchange="stu_class_picker" value="{{stu_class_index}}" range="{{stu_class}}">
      <view class="tip">{{stu_class[stu_class_index]}}</view>
    </picker>
    <picker bindchange="stu_class_picker" value="{{stu_class_index}}" range="{{stu_class}}">
      <image class="select" src="../../images/next.png"></image>
    </picker>
  </view>













<!-- container -->
</view>
